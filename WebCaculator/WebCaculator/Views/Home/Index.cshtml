@{
    ViewData["Title"] = "Home Page";
}
<div class="wrapper">
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    <div id="calculator" class="calculator">
        <button id="clear" class="clear">C</button>
        <div id="viewer" class="viewer">0</div>
        <button class="num" value="7">7</button>
        <button class="num" value="8">8</button>
        <button class="num" value="9">9</button>
        <button data-ops="plus" class="operator">+</button>
        <button class="num" value="4">4</button>
        <button class="num" value="5">5</button>
        <button class="num" value="6">6</button>
        <button data-ops="minus" class="operator">-</button>
        <button class="num" value="1">3</button>
        <button class="num" value="2">2</button>
        <button class="num" value="3">1</button>
        <button data-ops="times" class="operator">x</button>
        <button class="num" value="0">0</button>
        <button class="num" value=".">.</button>
        <button id="equals" class="equals">=</button>
        <button data-ops="divided by" class="operator">÷</button>
    </div>
</div>

